%h1 <%= singular_table_name.titleize %>
- if can? :update, @<%= singular_table_name %>
  = link_to "Edit", edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "button"

<% attributes.each do |attribute| -%>
.row
  .grid2
    %h4 <%= attribute.human_name.titleize %>
  .grid10
    %span= @<%= singular_table_name %>.<%= attribute.name %>
<% end -%>