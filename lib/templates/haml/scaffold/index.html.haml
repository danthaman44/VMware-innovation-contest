%section.listing

  %h1 <%= plural_table_name.titleize %>

  .row
    .grid2
      = link_to "Add", new_<%= singular_table_name %>_path, class: "button secondary"
    .grid3.offset6
      %input#search-field{:placeholder => "Search", :type => "text"}
    .offset8
      = link_to "Search", '', class: "button"


  

  %table.table-condensed.table-bordered.table-striped
    %thead
      %tr
<% attributes.each do |attribute, i| -%> 
        %th <%= attribute.human_name.titleize %>
<% end -%>
        %th &nbsp;




    %tbody
      - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
        %tr
<% attributes.each_with_index do |attribute, i| -%>
      <% if i == 0 %>
          %td= link_to <%= singular_table_name %>.<%= attribute.name %>, <%= singular_table_name %>
      <% elsif attribute.name == "published" %>
          %td= t <%= singular_table_name %>.<%= attribute.name %>.class
      <% else %>
          %td= <%= singular_table_name %>.<%= attribute.name %>
      <% end -%>
<% end -%>
    
          %td= link_to "Edit", edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "button button-primary"

  = will_paginate @<%= plural_table_name %>
