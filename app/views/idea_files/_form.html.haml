= form_for @idea_file do |f|

  .row
    .grid12
      = render partial: "partials/form_errors", locals: { object: @idea_file }

  .row
    .grid2
      = f.label :idea_id, class: "required"
    .grid10
      = f.number_field :idea_id
  .row
    .grid2
      = f.label :file, class: "required"
    .grid10
      = f.text_field :file
  .row
    .grid2
      = f.label :published, class: "required"
    .grid10
      = f.check_box :published

  .row
    .grid10.offset2
      = render partial: "partials/form_buttons",
                        locals: { f: f, cancel_path: idea_files_path, object: @idea_file }