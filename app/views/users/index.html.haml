%section.listing

  %h1 Users

  .row
    .grid2
      = link_to "Add", new_user_path, class: "button secondary"
    .grid3.offset6
      %input#search-field{:placeholder => "Search", :type => "text"}
    .offset8
      = link_to "Search", '', class: "button"


  

  %table.table-condensed.table-bordered.table-striped
    %thead
      %tr
 
        %th Name
 
        %th Email
 
        %th Password
 
        %th Job Title
 
        %th Phone
 
        %th Expertise
 
        %th Email Notification Comment
 
        %th Email Notification News
 
        %th Is Admin
        %th &nbsp;




    %tbody
      - @users.each do |user|
        %tr
      
          %td= link_to user.name, user
            
          %td= user.email
            
          %td= user.password
            
          %td= user.job_title
            
          %td= user.phone
            
          %td= user.expertise
            
          %td= t user.email_notification_comment.class
            
          %td= t user.email_notification_news.class
            
          %td= t user.is_admin.class
          
          %td= link_to "Edit", edit_user_path(user), class: "button button-primary"

  = will_paginate @users
