%section.listing

  %h1 Posts

  .row
    .grid2
      = link_to "Add", new_post_path, class: "button secondary"
    .grid3.offset6
      %input#search-field{:placeholder => "Search", :type => "text"}
    .offset8
      = link_to "Search", '', class: "button"


  

  %table.table-condensed.table-bordered.table-striped
    %thead
      %tr
 
        %th Name
 
        %th Content
 
        %th Published
 
        %th User
        %th &nbsp;




    %tbody
      - @posts.each do |post|
        %tr
      
          %td= link_to post.name, post
            
          %td= post.content
            
          %td= t post.published.class
            
          %td= post.user_id
          
          %td= link_to "Edit", edit_post_path(post), class: "button button-primary"

  = will_paginate @posts
